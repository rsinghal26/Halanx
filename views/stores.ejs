<% include partials/header.ejs %>

    
<div class="container" style="margin-top:50px">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/dashboard" class="list-group-item list-group-item-action active">Store Details</a>
                <a href="/dashboard/place/<%=store.place.id%>/openinghours" class="list-group-item list-group-item-action">Place Opening Hours</a>
                <a href="dashboard/plots/<%=store.place.id%>" class="list-group-item list-group-item-action">Visits Plots</a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="img-thumbnail">
                        <img src="<%= store.store_logo_url %>" height="30%" width="100%">
                    </div>
                </div>
                <div class="col-md-8">
                    <h3><b><%= store.name %></b></h3>
                    <hr>
                    <h6><b>Category:</b> <%=store.category%></h6>
                    <h6><b>Available categories:</b> <%store.categories_available.forEach(function(one){ %> <span><%=one%></span>, <%})%></h6>
                    <h6><b>Location:</b> <%=store.place.street_address%></h6>
                    <h6><b>City:</b> <%=store.place.city%></h6>
                    <h6><b>State:</b> <%=store.place.state%></h6>
                </div>
            </div>        
        </div>
    </div>
</div>
<% include partials/footer.ejs %>    